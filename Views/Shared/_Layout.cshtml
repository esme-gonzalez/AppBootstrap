<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Css/misestilos.css">
    <title>@ViewData["Title"] - AppBootstrap</title>
</head>
<body>

    <header>
        
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div><img src="~/Img/logo-trans-horizontal_1.png" width="140" height="40"></div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse contenedorLink opcionesMenu" id="navbarNav">
                    <ul class="navbar-nav contenedorUl ">

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Servicios">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Funcionalidades">Funcionalidades</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Ventajas">Ventajas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Nosotros">Nosotros</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("adm"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Privado">Privado</a>
                            </li>
                        }
                    </ul>
                     
                </div>

                <div class="collapse navbar-collapse contenedorLink opcionesLogin  id="navbarNav"">
                    <ul class=" navbar-nav contenedorUl m-lg-auto">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item ">
                            <a class="nav-link active " aria-current="page" asp-controller="Home" asp-action="Registro">Registrarse</a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated && User.IsInRole("adm") && User.IsInRole("vendedor"))
                    {
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Cliente" asp-action="Index">Cliente</a>
                        </li>
                    }
                  


                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link active  " asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesion</a>
                        </li>

                    }

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="navbar-nav ml-auto">

                            <a class=" nav-link active  " asp-controller="Home" asp-action="Welcome">Iniciar Sesion</a>
                        </li>
                    }

                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <main class="bg-light">
        <div class="container">

            @RenderBody()
        </div>
    </main>

    <footer class="text-white-50 bg-dark p-3 d-flex justify-content-center ">
        <div class="d-flex align-items-center">
            <div> <img class="ico m-2" src="~/Img/github.png" alt="">   </div>
            <div class="d-flex flex-column">
                <small> By EsmeraldaGonzalez </small>
                <a href="#" class="link-light">https://github.com/esme-gonzalez/AppWeb.gito</a>
            </div>
        </div>

    </footer>

    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
